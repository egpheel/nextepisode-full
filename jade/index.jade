extends template

block content
  .container.vcenter.searchSection
    h1 When's the next episode?
    .col-md-4
    .col-md-4
      form(role='search')
        .input-group
          input#searchTxt.form-control(type='text', placeholder='Search TV Show', autocomplete='off', autofocus)
          span.input-group-btn
            button#searchBtn.btn.btn-default(type='submit')
              span.glyphicon.glyphicon-search
    .col-md-4
    .clearfix
    .col-md-2
    #results.col-md-8
    .col-md-2
          
block footer
  footer
    p Thanks to <a href="http://www.tvmaze.com/" target="_blank">TVmaze</a> and <a href="https://fanart.tv/" target="_blank">fanart.tv</a> for their amazing APIs.
    
